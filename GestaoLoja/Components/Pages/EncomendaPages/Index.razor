@page "/encomendas"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrador,Funcionário")]

<PageTitle>Gestão de Vendas</PageTitle>

<h1>Gestão de Vendas</h1>

<div class="card mb-4 bg-light shadow-sm border-0">
    <div class="card-body p-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-6">
                <label class="form-label small fw-bold text-secondary">Filtrar por Estado:</label>
                <select class="form-select" @bind="FiltroEstado">
                    <option value="">Todos</option>
                    <option value="Pendente">Pendente (Por Aprovar)</option>
                    <option value="Pago">Pago (Pronto a Expedir)</option>
                    <option value="Enviado">Enviado</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-secondary w-100" @onclick="CarregarEncomendas">
                    <i class="bi bi-filter"></i> Filtrar
                </button>
            </div>
        </div>
    </div>
</div>

@if (Encomendas == null)
{
    <p><em>A carregar encomendas...</em></p>
}
else if (!Encomendas.Any())
{
    <div class="alert alert-info">Não foram encontradas encomendas.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border bg-white">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Data</th>
                    <th>Cliente</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center" style="width: 300px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Encomendas)
                {
                    <tr>
                        <td class="fw-bold">#@item.Id</td>
                        <td>
                            <div>@item.Data.ToShortDateString()</div>
                            <small class="text-muted">@item.Data.ToShortTimeString()</small>
                        </td>
                        <td>
                            @if (item.Cliente != null)
                            {
                                <div>@item.Cliente.Email</div>
                                <small class="text-muted">NIF: @item.Cliente.Nif</small>
                            }
                            else
                            {

                                <span class="text-muted">Anónimo</span>
                            }
                        </td>
                        <td class="text-end fw-bold text-primary">@item.ValorTotal.ToString("C2")</td>

                        <td class="text-center">
                            @if (item.Estado == "Pendente")
                            {
                                <span class="badge bg-warning text-dark">Pendente</span>
                            }
                            else if (item.Estado == "Pago")
                            {

                                <span class="badge bg-info text-dark">Pago</span>
                            }
                            else if (item.Estado == "Enviado")
                            {

                                <span class="badge bg-success">Enviado</span>
                            }
                            else if (item.Estado == "Cancelado")
                            {

                                <span class="badge bg-danger">Cancelado</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary">@item.Estado</span>
                            }
                        </td>

                        <td class="text-center">
                            <div class="btn-group">
                                @if (item.Estado == "Pendente")
                                {
                                    <button class="btn btn-sm btn-success" @onclick='() => MudarEstado(item, "Pago")' title="Confirmar Pagamento">
                                        <i class="bi bi-check-lg"></i> Confirmar
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick='() => MudarEstado(item, "Cancelado")' title="Rejeitar">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                }
                                else if (item.Estado == "Pago")
                                {
                                    <button class="btn btn-sm btn-primary" @onclick="() => ExpedirEncomenda(item)" title="Enviar Produtos">
                                        <i class="bi bi-box-seam"></i> Expedir
                                    </button>
                                }

                                <a href="encomendas/details?id=@item.Id" class="btn btn-sm btn-light border" title="Ver Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Encomenda>? Encomendas;
    private string FiltroEstado { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        await CarregarEncomendas();
    }

    private async Task CarregarEncomendas()
    {
        using var context = DbFactory.CreateDbContext();

        var query = context.Encomendas
            .Include(e => e.Cliente) // Inclui dados do cliente
            .AsQueryable();

        if (!string.IsNullOrEmpty(FiltroEstado))
        {
            query = query.Where(e => e.Estado == FiltroEstado);
        }

        // Ordena por data (mais recentes primeiro)
        Encomendas = await query.OrderByDescending(e => e.Data).ToListAsync();
    }

    private async Task MudarEstado(Encomenda enc, string novoEstado)
    {
        using var context = DbFactory.CreateDbContext();
        var encDb = await context.Encomendas.FindAsync(enc.Id);

        if (encDb != null)
        {
            encDb.Estado = novoEstado;
            await context.SaveChangesAsync();
            await CarregarEncomendas();
        }
    }

    // --- PONTO CRÍTICO: EXPEDIÇÃO E ATUALIZAÇÃO DE STOCKS ---
    private async Task ExpedirEncomenda(Encomenda enc)
    {
        using var context = DbFactory.CreateDbContext();

        // 1. Carregar a encomenda e os seus ITENS (Produtos)
        var encDb = await context.Encomendas
            .Include(e => e.Itens) // Fundamental para saber o que abater
            .FirstOrDefaultAsync(e => e.Id == enc.Id);

        if (encDb != null && encDb.Estado == "Pago")
        {
            // 2. Loop para abater Stock
            foreach (var item in encDb.Itens)
            {
                var produto = await context.Produtos.FindAsync(item.ProdutoId);
                if (produto != null)
                {
                    // Abate a quantidade vendida
                    produto.Stock = produto.Stock - item.Quantidade;
                }
            }

            // 3. Mudar estado para Enviado
            encDb.Estado = "Enviado";

            await context.SaveChangesAsync();
            await CarregarEncomendas();
        }
    }
}