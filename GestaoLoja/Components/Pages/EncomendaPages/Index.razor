@page "/encomendas"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

@attribute [Authorize(Roles = "Administrador,Funcionário")]

<PageTitle>Gestão de Vendas</PageTitle>

<h1>Gestão de Vendas</h1>

<div class="card mb-4 bg-light shadow-sm border-0">
    <div class="card-body p-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label small fw-bold text-secondary">Estado:</label>
                <select class="form-select" @bind="FiltroEstado">
                    <option value="">Todos</option>
                    <option value="Pendente">Pendente</option>
                    <option value="Pago">Pago (Pronto a Expedir)</option>
                    <option value="Enviado">Enviado</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-secondary w-100" @onclick="AtualizarComFiltro">
                    <i class="bi bi-filter"></i> Atualizar
                </button>
            </div>
        </div>
    </div>
</div>

@if (Encomendas == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!Encomendas.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i> Sem encomendas registadas.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border bg-white">
            <thead class="table-light">
                <tr>
                    <th class="ps-3">#ID</th>
                    <th>Data</th>
                    <th>Cliente</th>
                    <th class="text-end">Total</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center" style="width: 220px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Encomendas)
                {
                    <tr>
                        <td class="fw-bold ps-3 text-secondary">#@item.Id</td>
                        <td>
                            <div class="fw-bold">@item.Data.ToShortDateString()</div>
                            <small class="text-muted">@item.Data.ToShortTimeString()</small>
                        </td>
                        <td>
                            @if (item.Cliente != null)
                            {
                                <div class="text-truncate" style="max-width: 200px;" title="@item.Cliente.UserName">
                                    @item.Cliente.Email
                                </div>
                                <small class="text-muted">NIF: @(item.Cliente.Nif ?? "-")</small>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Anónimo</span>
                            }
                        </td>
                        <td class="text-end fw-bold text-dark">@item.ValorTotal.ToString("C2")</td>

                        <td class="text-center">
                            @if (item.Estado == "Pendente")
                            {
                                <span class="badge rounded-pill bg-warning text-dark border border-warning">Pendente</span>
                            }
                            else if (item.Estado == "Pago")
                            {
                                <span class="badge rounded-pill bg-success border border-success">Pago</span>
                            }
                            else if (item.Estado == "Enviado")
                            {
                                <span class="badge rounded-pill bg-primary border border-primary">Enviado</span>
                            }
                            else if (item.Estado == "Cancelado")
                            {
                                <span class="badge rounded-pill bg-danger border border-danger">Cancelado</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-secondary">@item.Estado</span>
                            }
                        </td>

                        <td>
                            <div class="d-flex gap-2">

                                <a href="encomendas/details?id=@item.Id" class="btn btn-sm btn-info text-dark shadow-sm" title="Ver Detalhes">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>

                                @if (item.Estado == "Pendente")
                                {
                                    <button class="btn btn-sm btn-success shadow-sm" @onclick='() => ConfirmarPagamento(item)'>
                                        <i class="bi bi-check-lg"></i> Confirmar
                                    </button>

                                    <button class="btn btn-sm btn-outline-danger shadow-sm" @onclick='() => AnularEncomenda(item)'>
                                        <i class="bi bi-x-lg"></i> Rejeitar
                                    </button>
                                }
                                else if (item.Estado == "Pago")
                                {
                                    <button class="btn btn-sm btn-primary shadow-sm" @onclick="() => ExpedirEncomenda(item)">
                                        <i class="bi bi-truck"></i> Expedir
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-outline-primary" @onclick="PaginaAnterior" disabled="@(PaginaAtual == 1)">
            <i class="bi bi-chevron-left"></i> Anterior
        </button>
        <span>Página <strong>@PaginaAtual</strong> de <strong>@TotalPaginas</strong> (Total: @TotalItens)</span>
        <button class="btn btn-outline-primary" @onclick="PaginaProxima" disabled="@(PaginaAtual == TotalPaginas)">
            Próxima <i class="bi bi-chevron-right"></i>
        </button>
    </div>
}
@code {
    private List<Encomenda>? Encomendas;
    private string FiltroEstado { get; set; } = "";

    private int PaginaAtual = 1;
    private int TamanhoPagina = 10;
    private int TotalItens = 0;
    private int TotalPaginas => TotalItens == 0 ? 1 : (int)Math.Ceiling((double)TotalItens / TamanhoPagina);

    private async Task CarregarEncomendas()
    {
        using var context = DbFactory.CreateDbContext();
        var query = context.Encomendas.Include(e => e.Cliente).AsQueryable();

        if (!string.IsNullOrEmpty(FiltroEstado))
        {
            query = query.Where(e => e.Estado == FiltroEstado);
        }

        // Contar (já com o filtro aplicado)
        TotalItens = await query.CountAsync();

        // Paginar
        Encomendas = await query
            .OrderByDescending(e => e.Data)
            .Skip((PaginaAtual - 1) * TamanhoPagina)
            .Take(TamanhoPagina)
            .ToListAsync();
    }

    // Quando o utilizador muda o filtro ou clica em "Atualizar", reinicia a paginação
    private async Task AtualizarComFiltro()
    {
        PaginaAtual = 1; // Reset para a primeira página
        await CarregarEncomendas();
    }

    // Altera o botão de atualizar no HTML para chamar AtualizarComFiltro em vez de CarregarEncomendas

    private async Task PaginaAnterior()
    {
        if (PaginaAtual > 1) { PaginaAtual--; await CarregarEncomendas(); }
    }

    private async Task PaginaProxima()
    {
        if (PaginaAtual < TotalPaginas) { PaginaAtual++; await CarregarEncomendas(); }
    }

    protected override async Task OnInitializedAsync()
    {
        await CarregarEncomendas();
    }

    // LÓGICA DE CONFIRMAR PAGAMENTO (COM ATUALIZAÇÃO DE STOCK)
    // Igual à API: O stock sai quando o dinheiro entra.
    private async Task ConfirmarPagamento(Encomenda enc)
    {
        using var context = DbFactory.CreateDbContext();

        // Carrega encomenda E Itens
        var encDb = await context.Encomendas
            .Include(e => e.Itens)
            .FirstOrDefaultAsync(e => e.Id == enc.Id);

        if (encDb != null && encDb.Estado == "Pendente")
        {
            // 1. Tentar deduzir Stock
            bool stockSuficiente = true;

            foreach (var item in encDb.Itens)
            {
                var produto = await context.Produtos.FindAsync(item.ProdutoId);
                if (produto != null)
                {
                    if (produto.Stock < item.Quantidade)
                    {
                        stockSuficiente = false;
                        await JS.InvokeVoidAsync("alert", $"Erro: Stock insuficiente para o produto {produto.Nome}.");
                        break;
                    }
                    produto.Stock -= item.Quantidade; // Abate stock
                    context.Entry(produto).State = EntityState.Modified; // Força gravação
                }
            }

            if (stockSuficiente)
            {
                encDb.Estado = "Pago";
                await context.SaveChangesAsync();
                await CarregarEncomendas();
            }
        }
    }

    // LÓGICA DE EXPEDIR (Só muda estado, stock já saiu no pagamento)
    private async Task ExpedirEncomenda(Encomenda enc)
    {
        using var context = DbFactory.CreateDbContext();
        var encDb = await context.Encomendas.FindAsync(enc.Id);

        if (encDb != null && encDb.Estado == "Pago")
        {
            encDb.Estado = "Enviado";
            await context.SaveChangesAsync();
            await CarregarEncomendas();
        }
    }

    private async Task AnularEncomenda(Encomenda enc)
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", "Tem a certeza que deseja anular esta encomenda?");
        if (confirm)
        {
            using var context = DbFactory.CreateDbContext();

            // Carregar encomenda E os itens (importante para devolver stock)
            var encDb = await context.Encomendas
                .Include(e => e.Itens)
                .FirstOrDefaultAsync(e => e.Id == enc.Id);

            if (encDb != null)
            {
                // SE JÁ ESTAVA PAGA -> TEMOS DE DEVOLVER O STOCK
                if (encDb.Estado == "Pago" || encDb.Estado == "Enviado")
                {
                    foreach (var item in encDb.Itens)
                    {
                        var produto = await context.Produtos.FindAsync(item.ProdutoId);
                        if (produto != null)
                        {
                            produto.Stock += item.Quantidade; // Devolve ao stock
                            context.Entry(produto).State = EntityState.Modified;
                        }
                    }
                }

                encDb.Estado = "Cancelado";
                await context.SaveChangesAsync();
                await CarregarEncomendas();

                // Feedback visual (opcional)
                await JS.InvokeVoidAsync("alert", "Encomenda anulada (stock reposto se aplicável).");
            }
        }
    }
}