@page "/produtos"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize]

<PageTitle>Produtos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Gestão de Produtos</h1>

    <div class="d-flex gap-2">
        <AuthorizeView Roles="Administrador,Funcionário">
            <a href="produtos/aprovacao" class="btn btn-warning text-dark shadow-sm">
                <i class="bi bi-hourglass-split"></i>
                <span class="d-none d-md-inline">Aprovações</span>
            </a>
        </AuthorizeView>
        <a href="produtos/create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i>
            <span class="d-none d-md-inline">Novo Produto</span>
        </a>
    </div>
</div>

<div class="card mb-4 bg-light border-0 shadow-sm">
    <div class="card-body p-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label small fw-bold text-secondary">Pesquisar</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0"
                           @bind="TermoPesquisa"
                           @bind:event="oninput"
                           placeholder="Nome do produto..." />
                </div>
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold text-secondary">Categoria</label>
                <select class="form-select" @bind="CategoriaIdFiltro">
                    <option value="0">Todas</option>
                    @foreach (var cat in CategoriasList)
                    {
                        <option value="@cat.Id">@cat.Nome</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold text-secondary">Tipo</label>
                <select class="form-select" @bind="FiltroTipo">
                    <option value="0">Todos</option>
                    <option value="1">Para Venda</option>
                    <option value="2">Coleção</option>
                </select>
            </div>

            <div class="col-md-2">
                <button class="btn btn-secondary w-100" @onclick="CarregarProdutos">
                    Filtrar
                </button>
            </div>
        </div>
    </div>
</div>

@if (Produtos == null)
{
    <p><em>Loading...</em></p>
}
else if (!Produtos.Any())
{
    <div class="alert alert-warning">Nenhum produto encontrado com estes filtros.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Imagem</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th class="text-center">Modo</th>
                    <th class="text-center">Stock</th>
                    <th class="text-end">Preço Final</th>
                    <th class="text-center">Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Produtos)
                {
                    <tr>
                        <td style="width: 60px;">
                            @if (!string.IsNullOrEmpty(produto.UrlImagem))
                            {
                                <img src="@produto.UrlImagem" style="width: 50px; height: 50px; object-fit: cover;" class="rounded" />
                            }
                            else
                            {
                                <span class="text-muted small">N/A</span>
                            }
                        </td>
                        <td>@produto.Nome</td>
                        <td>@(produto.Categoria?.Nome ?? "-")</td>
                        <td class="text-center">
                            @if (produto.DisponivelParaVenda)
                            {
                                <span class="badge bg-success">Venda</span>
                            }
                            else
                            {

                                <span class="badge bg-info text-dark">Coleção</span>
                            }
                        </td>
                        <td class="text-center">
                            @(produto.DisponivelParaVenda? produto.Stock.ToString() : "-")
                        </td>
                        <td class="text-end">
                            @(produto.DisponivelParaVenda? produto.PrecoFinal.ToString("C2") : "-")
                        </td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@produto.Estado</span>
                        </td>
                        <td>
                            <a href="produtos/details?id=@produto.Id" class="btn btn-sm btn-info" title="Ver Detalhes">
                                <i class="bi bi-eye"></i> Detalhes
                            </a>
                            <AuthorizeView Roles="Administrador,Funcionário">
                                <a href="produtos/edit?id=@produto.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                <a href="produtos/delete?id=@produto.Id" class="btn btn-sm btn-outline-danger">Apagar</a>
                            </AuthorizeView>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-secondary" disabled="@(PaginaAtual == 1)" @onclick="PaginaAnterior">Anterior</button>
        <span>Página @PaginaAtual de @TotalPaginas</span>
        <button class="btn btn-secondary" disabled="@(PaginaAtual == TotalPaginas)" @onclick="PaginaSeguinte">Seguinte</button>
    </div>
}

@code {
    private List<Produto>? Produtos;
    private List<Categoria> CategoriasList { get; set; } = new();

    // Filtros
    private string TermoPesquisa { get; set; } = "";
    private int CategoriaIdFiltro { get; set; } = 0;

    // 0 = Todos, 1 = Venda, 2 = Coleção
    private int FiltroTipo { get; set; } = 0;

    // Paginação
    private int PaginaAtual { get; set; } = 1;
    private int TamanhoPagina { get; set; } = 8; // Mostra 5 produtos por página
    private int TotalItems { get; set; } = 0;
    private int TotalPaginas => (int)Math.Ceiling((double)TotalItems / TamanhoPagina);

    protected override async Task OnInitializedAsync()
    {
        // Carregar categorias para o dropdown
        using var context = DbFactory.CreateDbContext();
        CategoriasList = await context.Categorias.ToListAsync();

        await CarregarProdutos();
    }

    private async Task CarregarProdutos()
    {
        using var context = DbFactory.CreateDbContext();

        // Query Base
        var query = context.Produtos
            .Include(p => p.Categoria)
            .AsQueryable();

        query = query.Where(p => p.Estado != EstadoProduto.Pendente);

        // Filtro: Texto
        if (!string.IsNullOrWhiteSpace(TermoPesquisa))
        {
            query = query.Where(p => p.Nome.Contains(TermoPesquisa));
        }

        // Filtro: Categoria
        if (CategoriaIdFiltro > 0)
        {
            query = query.Where(p => p.CategoriaId == CategoriaIdFiltro);
        }

        // Filtro: Tipo (Venda vs Coleção) -> A TUA NOVIDADE AQUI
        if (FiltroTipo == 1)
        {
            // Quer apenas Venda
            query = query.Where(p => p.DisponivelParaVenda == true);
        }
        else if (FiltroTipo == 2)
        {
            // Quer apenas Coleção
            query = query.Where(p => p.DisponivelParaVenda == false);
        }

        // Contar e Paginar
        TotalItems = await query.CountAsync();

        if (TotalPaginas == 0) PaginaAtual = 1;
        else if (PaginaAtual > TotalPaginas) PaginaAtual = TotalPaginas;

        Produtos = await query
            .OrderByDescending(p => p.Id)
            .Skip((PaginaAtual - 1) * TamanhoPagina)
            .Take(TamanhoPagina)
            .ToListAsync();
    }

    private async Task PaginaAnterior() { if (PaginaAtual > 1) { PaginaAtual--; await CarregarProdutos(); } }
    private async Task PaginaSeguinte() { if (PaginaAtual < TotalPaginas) { PaginaAtual++; await CarregarProdutos(); } }
}