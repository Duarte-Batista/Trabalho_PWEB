@page "/produtos/create"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using System.IO
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment WebEnvironment
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager

@attribute [Authorize]

<PageTitle>Criar Produto</PageTitle>

<h1>Criar Novo Produto</h1>

<h2>Produto</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <EditForm method="post" Model="Produto" OnValidSubmit="AddProduto" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            @if (!string.IsNullOrEmpty(MensagemErro))
            {
                <div class="alert alert-danger">@MensagemErro</div>
            }

            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <InputText id="nome" @bind-Value="Produto.Nome" class="form-control" />
                <ValidationMessage For="() => Produto.Nome" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <InputTextArea id="descricao" @bind-Value="Produto.Descricao" class="form-control" />
                <ValidationMessage For="() => Produto.Descricao" class="text-danger" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Preço Base (€):</label>
                    <InputNumber @bind-Value="Produto.PrecoBase" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stock:</label>
                    <InputNumber @bind-Value="Produto.Stock" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Margem de Lucro (0.00 a 1.00):</label>
                <InputNumber @bind-Value="Produto.MargemLucro" class="form-control" min="0" max="1" step="0.01" />
                <div class="form-text">Ex: 0.20 = 20%</div>
            </div>

            <div class="mb-3">
                <label for="categoria" class="form-label">Categoria:</label>
                <InputSelect id="categoria" @bind-Value="Produto.CategoriaId" class="form-control">
                    <option value="0">-- Selecione uma Categoria --</option>
                    @if (ListaCategorias != null)
                    {
                        @foreach (var cat in ListaCategorias)
                        {
                            <option value="@cat.Id">@cat.Nome</option>
                        }
                    }
                </InputSelect>
                <ValidationMessage For="() => Produto.CategoriaId" class="text-danger" />
            </div>

            <div class="mb-3">
                <label class="form-label">Fornecedor (Dono):</label>
                <InputSelect @bind-Value="Produto.FornecedorId" class="form-control">
                    <option value="">-- Selecione o Fornecedor --</option>
                    @foreach (var user in ListaUtilizadores)
                    {
                        <option value="@user.Id">@user.Email</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-3 form-check">
                <InputCheckbox @bind-Value="Produto.DisponivelParaVenda" class="form-check-input" id="checkVenda" />
                <label class="form-check-label" for="checkVenda">Disponível para Venda</label>
            </div>

            <div class="mb-3">
                <label for="imageurl" class="form-label">URL da Imagem:</label>
                <InputText id="imageurl" @bind-Value="Produto.ImageUrl" class="form-control" />
                <ValidationMessage For="() => Produto.ImageUrl" class="text-danger" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Imagem do Produto:</label>
                <InputFile OnChange="CarregarImagem" class="form-control" accept=".png,.jpg,.jpeg,.webp" />
            </div>

            <button type="submit" class="btn btn-primary">Criar Produto</button>
            <a href="/produtos" class="btn btn-secondary">Cancelar</a>
        </EditForm>
    </div>
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(PreviewImagem))
        {
            <div class="card">
                <div class="card-header">Pré-visualização</div>
                <div class="card-body">
                    <img src="@PreviewImagem" class="img-fluid rounded" style="max-height: 300px;" />
                </div>
            </div>
        }
    </div>
</div>


@code {
    [SupplyParameterFromForm]
    private Produto Produto { get; set; } = new();
    public List<Categoria> ListaCategorias { get; set; } = new();    //lista para guardar as categorias disponiveis
    public List<ApplicationUser> ListaUtilizadores { get; set; } = new();
    public string MensagemErro { get; set; } = "";

    private string PreviewImagem = "";
    private long MaxFileSize = 1024 * 1024 * 5;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ListaCategorias = await context.Categorias.ToListAsync();
        ListaUtilizadores = await context.Users.ToListAsync();

        // Se for Fornecedor a criar, pré-seleciona-o
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            var currentUser = ListaUtilizadores.FirstOrDefault(u => u.UserName == user.Identity.Name);
            if (currentUser != null)
            {
                Produto.FornecedorId = currentUser.Id;
            }
        }
    }

    private async Task CarregarImagem(InputFileChangeEventArgs e)
    {
        try
        {
            var ficheiro = e.File;

            // Gerar nome único
            var nomeFicheiro = Guid.NewGuid().ToString() + Path.GetExtension(ficheiro.Name);

            // Definir caminho (wwwroot/img/produtos)
            var pasta = Path.Combine(WebEnvironment.WebRootPath, "img", "produtos");
            if (!Directory.Exists(pasta)) Directory.CreateDirectory(pasta);

            var caminhoCompleto = Path.Combine(pasta, nomeFicheiro);

            // Guardar no disco
            await using FileStream fs = new(caminhoCompleto, FileMode.Create);
            await ficheiro.OpenReadStream(MaxFileSize).CopyToAsync(fs);

            // Atualizar o objeto Produto
            Produto.UrlImagem = $"/img/produtos/{nomeFicheiro}";

            // Atualizar Preview
            PreviewImagem = Produto.UrlImagem;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro no upload: {ex.Message}");
        }
    }

    private async Task AddProduto()
    {
        if (Produto.CategoriaId <= 0)
        {
            MensagemErro = "Selecione uma categoria.";
            return;
        }
        if (string.IsNullOrEmpty(Produto.FornecedorId))
        {
            MensagemErro = "Selecione um fornecedor.";
            return;
        }

        using var context = DbFactory.CreateDbContext();
        context.Produtos.Add(Produto);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/produtos");
    }
}
