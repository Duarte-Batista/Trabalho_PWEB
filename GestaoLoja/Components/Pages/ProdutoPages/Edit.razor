@page "/produtos/edit"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment WebEnvironment

@attribute [Authorize(Roles = "Administrador, Funcionario")]

<PageTitle>Editar Produto</PageTitle>

<h1>Editar Produto</h1>
<hr />

@if (Produto is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <EditForm method="post" Model="Produto" OnValidSubmit="UpdateProduto" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <input type="hidden" name="Produto.Id" value="@Produto.Id" />

                <div class="mb-3">
                    <label class="form-label">Nome:</label>
                    <InputText @bind-Value="Produto.Nome" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descrição:</label>
                    <InputTextArea @bind-Value="Produto.Descricao" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Preço Base (€):</label>
                        <InputNumber @bind-Value="Produto.PrecoBase" class="form-control" readonly />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Margem (0-1):</label>
                        <InputNumber @bind-Value="Produto.MargemLucro" class="form-control" min="0" max="1" step="0.01" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Stock:</label>
                    <InputNumber @bind-Value="Produto.Stock" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Categoria:</label>
                    <InputSelect @bind-Value="Produto.CategoriaId" class="form-control">
                        @foreach (var cat in ListaCategorias)
                        {
                            <option value="@cat.Id">@cat.Nome</option>
                        }
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="form-label">Fornecedor:</label>
                    <InputSelect @bind-Value="Produto.FornecedorId" class="form-control">
                        <option value="">-- Selecione --</option>
                        @foreach (var user in ListaUtilizadores)
                        {
                            <option value="@user.Id">@user.Email</option>
                        }
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="form-label">Alterar Imagem:</label>
                    <InputFile OnChange="CarregarNovaImagem" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
                </div>

                <div class="mb-3 form-check">
                    <InputCheckbox @bind-Value="Produto.DisponivelParaVenda" class="form-check-input" id="checkVenda" />
                    <label class="form-check-label" for="checkVenda">Disponível para Venda</label>
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado:</label>
                    <InputSelect @bind-Value="Produto.Estado" class="form-control">
                        @foreach (var estado in Enum.GetValues(typeof(EstadoProduto)))
                        {
                            <option value="@estado">@estado</option>
                        }
                    </InputSelect>
                </div>

                <button type="submit" class="btn btn-primary">Guardar Alterações</button>
                <a href="/produtos" class="btn btn-secondary">Cancelar</a>
            </EditForm>
        </div>
        <div class="col-md-5">
            <div class="card h-100">
                <div class="card-header text-center fw-bold">Imagem</div>

                <div class="card-body d-flex flex-column align-items-center justify-content-center">

                    @if (!string.IsNullOrEmpty(PreviewImagem))
                    {
                        <img src="@PreviewImagem" class="img-fluid rounded border mb-3"
                             style="max-height: 250px; width: auto; object-fit: contain;" />

                        <span class="badge bg-success px-3 py-2">Nova Imagem Selecionada</span>
                    }
                    else if (!string.IsNullOrEmpty(Produto.UrlImagem))
                    {
                        <img src="@Produto.UrlImagem" class="img-fluid rounded border mb-3"
                             style="max-height: 250px; width: auto; object-fit: contain;" />

                        <span class="badge bg-secondary px-3 py-2">Imagem Atual</span>
                    }
                    else
                    {
                        <div class="text-muted py-5">
                            <i class="bi bi-image fs-1 d-block mb-2"></i>
                            Sem imagem definida
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    public Produto? Produto { get; set; }

    public List<Categoria> ListaCategorias { get; set; } = new();
    public List<ApplicationUser> ListaUtilizadores { get; set; } = new ();

    private IBrowserFile? ficheiroUpload;
    private string PreviewImagem = "";
    private const long MaxFileSize = 1024 * 1024 * 10;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ListaCategorias = await context.Categorias.ToListAsync();
        ListaUtilizadores = await context.Users.ToListAsync();

        if (Produto is null)
        {
            Produto = await context.Produtos.FirstOrDefaultAsync(m => m.Id == Id);
        }

        if (Produto is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task CarregarNovaImagem(InputFileChangeEventArgs e)
    {
        ficheiroUpload = e.File;

        // Criar preview para o utilizador ver o que escolheu
        var format = "image/png";
        var resizedImage = await ficheiroUpload.RequestImageFileAsync(format, 400, 400);
        using var stream = resizedImage.OpenReadStream(MaxFileSize);
        using var ms = new MemoryStream();

        await stream.CopyToAsync(ms);
        var buffer = ms.ToArray();

        PreviewImagem = $"data:{format};base64,{Convert.ToBase64String(buffer)}";
    }

    public async Task UpdateProduto()
    {
        // Processar Upload se existir
        if (ficheiroUpload != null)
        {
            try
            {
                var nomeFicheiro = Guid.NewGuid().ToString() + Path.GetExtension(ficheiroUpload.Name);
                var pastaDestino = Path.Combine(WebEnvironment.WebRootPath, "img", "produtos");
                Directory.CreateDirectory(pastaDestino);
                var caminhoCompleto = Path.Combine(pastaDestino, nomeFicheiro);

                await using FileStream fs = new(caminhoCompleto, FileMode.Create);
                await ficheiroUpload.OpenReadStream(MaxFileSize).CopyToAsync(fs);
                Produto!.UrlImagem = $"/img/produtos/{nomeFicheiro}";
            }
            catch (Exception ex) { Console.WriteLine("Erro upload: " + ex.Message); }
        }

        using var context = DbFactory.CreateDbContext();

        // BUSCAR O PRODUTO REAL À BD
        var produtoNaBd = await context.Produtos.FindAsync(Produto!.Id);

        if (produtoNaBd != null)
        {
            // ATUALIZAR MANUALMENTE (Isto garante que o FornecedorId atualiza)
            produtoNaBd.Nome = Produto.Nome;
            produtoNaBd.Descricao = Produto.Descricao;
            produtoNaBd.PrecoBase = Produto.PrecoBase;
            produtoNaBd.MargemLucro = Produto.MargemLucro;
            produtoNaBd.Stock = Produto.Stock;
            produtoNaBd.Estado = Produto.Estado;
            produtoNaBd.CategoriaId = Produto.CategoriaId;
            produtoNaBd.FornecedorId = Produto.FornecedorId;
            produtoNaBd.DisponivelParaVenda = Produto.DisponivelParaVenda;
            produtoNaBd.UrlImagem = Produto.UrlImagem;

            await context.SaveChangesAsync();
        }

        NavigationManager.NavigateTo("/produtos");
    }

    private bool ProdutoExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Produtos.Any(e => e.Id == id);
    }
}
