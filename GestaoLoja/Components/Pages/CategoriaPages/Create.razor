@page "/categoria/create"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Data
@using GestaoLoja.Entities
@using System.IO
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment WebEnvironment

<PageTitle>Criar Categoria</PageTitle>

<h1>Criar Categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Categoria" OnValidSubmit="AddCategoria" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger"/>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome da Categoria:</label> 
                <InputText id="nome" @bind-Value="Categoria.Nome" class="form-control"/> 
                <ValidationMessage For="() => Categoria.Nome" class="text-danger" /> 
            </div>    
            <div class="mb-3">
                <label for="categoriapai" class="form-label">Categoria Pai (Opcional):</label>
                <InputSelect id="categoriapai" @bind-Value="Categoria.CategoriaPaiId" class="form-control">
                    <option value="">-- Nenhuma (É uma Categoria Principal) --</option>
                    @foreach (var cat in ListaCategorias)
                    {
                        <option value="@cat.Id">@cat.Nome</option>
                    }
                </InputSelect>
                <div class="form-text">Selecione apenas se esta for uma sub-categoria (ex: "Ouro" dentro de "Moedas").</div>
            </div>

            @* <div class="mb-3">
                <label class="form-label">Ordem de Exibição:</label>
                <InputNumber @bind-Value="Categoria.Ordem" class="form-control" />
            </div> *@

            <div class="mb-3">
                <label class="form-label">Imagem da Categoria:</label>
                <InputFile OnChange="CarregarImagem" class="form-control" accept=".png,.jpg,.jpeg" />
            </div>

            <button type="submit" class="btn btn-primary">Criar</button>
            <a href="/categoria" class="btn btn-secondary">Voltar</a>
        </EditForm>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(PreviewImagem))
        {
            <img src="@PreviewImagem" class="img-fluid rounded border" style="max-height: 200px;" />
        }
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public Categoria Categoria { get; set; } = new();
    // Lista para preencher a dropdown
    public List<Categoria> ListaCategorias { get; set; } = new();
    private string PreviewImagem = "";

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ListaCategorias = await context.Categorias.OrderBy(c => c.Nome).ToListAsync();
    }

    private async Task CarregarImagem(InputFileChangeEventArgs e)
    {
        try
        {
            var ficheiro = e.File;
            var nomeFicheiro = Guid.NewGuid().ToString() + Path.GetExtension(ficheiro.Name);

            // Pasta diferente: categorias
            var pasta = Path.Combine(WebEnvironment.WebRootPath, "img", "categorias");
            if (!Directory.Exists(pasta)) Directory.CreateDirectory(pasta);

            var caminho = Path.Combine(pasta, nomeFicheiro);

            await using FileStream fs = new(caminho, FileMode.Create);
            await ficheiro.OpenReadStream(1024 * 1024 * 5).CopyToAsync(fs);

            Categoria.UrlImagem = $"/img/categorias/{nomeFicheiro}";
            PreviewImagem = Categoria.UrlImagem;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
        }
    }

    public async Task AddCategoria()
    {
        using var context = DbFactory.CreateDbContext();
        context.Categorias.Add(Categoria);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/categoria");
    }
}
