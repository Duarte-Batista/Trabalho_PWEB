@page "/"
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Dashboard - MyCOLL</PageTitle>

<div class="p-4 mb-4 bg-light rounded-3 shadow-sm border">
    <div class="container-fluid py-2">
        <h1 class="display-5 fw-bold text-primary">Olá, @NomeUtilizador!</h1>
        <p class="col-md-8 fs-4">Bem-vindo à área de gestão da <strong>MyCOLL</strong>.</p>
        <p>Aqui podes gerir o catálogo de colecionáveis, aprovar novos itens e processar as encomendas dos clientes.</p>
    </div>
</div>

@if (ACarregar)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">A carregar...</span>
        </div>
    </div>
}
else
{
    <div class="row g-4 mb-5">

        <div class="col-md-3">
            <div class="card text-white bg-warning h-100 shadow-sm">
                <div class="card-header fw-bold"><i class="bi bi-hourglass-split"></i> Aprovações</div>
                <div class="card-body">
                    <h2 class="card-title display-6">@ProdutosPendentes</h2>
                    <p class="card-text">Produtos à espera de validação.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="produtos/aprovacao" class="btn btn-light btn-sm w-100 text-warning fw-bold">Resolver Agora</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger h-100 shadow-sm">
                <div class="card-header fw-bold"><i class="bi bi-cart-check"></i> Encomendas</div>
                <div class="card-body">
                    <h2 class="card-title display-6">@EncomendasPendentes</h2>
                    <p class="card-text">Vendas por confirmar ou pagar.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="encomendas" class="btn btn-light btn-sm w-100 text-danger fw-bold">Processar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-header fw-bold"><i class="bi bi-box-seam"></i> Catálogo</div>
                <div class="card-body">
                    <h2 class="card-title display-6">@TotalProdutos</h2>
                    <p class="card-text">Itens registados no total.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="produtos" class="btn btn-light btn-sm w-100 text-primary fw-bold">Ver Todos</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success h-100 shadow-sm">
                <div class="card-header fw-bold"><i class="bi bi-people"></i> Comunidade</div>
                <div class="card-body">
                    <h2 class="card-title display-6">@TotalUsers</h2>
                    <p class="card-text">Utilizadores registados.</p>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <AuthorizeView Roles="Administrador">
                        <a href="admin/utilizadores" class="btn btn-light btn-sm w-100 text-success fw-bold">Gerir</a>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3 border-bottom pb-2">Acesso Rápido</h3>
    <div class="row g-3">
        <div class="col-md-4">
            <a href="produtos/create" class="text-decoration-none">
                <div class="p-3 border rounded bg-white d-flex align-items-center hover-shadow">
                    <div class="bg-primary text-white p-3 rounded me-3">
                        <i class="bi bi-plus-lg fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-dark">Adicionar Produto</h5>
                        <small class="text-muted">Criar nova ficha de colecionável</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="categoria" class="text-decoration-none">
                <div class="p-3 border rounded bg-white d-flex align-items-center hover-shadow">
                    <div class="bg-info text-dark p-3 rounded me-3">
                        <i class="bi bi-tags fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-dark">Gerir Categorias</h5>
                        <small class="text-muted">Organizar a hierarquia</small>
                    </div>
                </div>
            </a>
        </div>

        <AuthorizeView Roles="Administrador">
            <div class="col-md-4">
                <a href="admin/utilizadores" class="text-decoration-none">
                    <div class="p-3 border rounded bg-white d-flex align-items-center hover-shadow">
                        <div class="bg-dark text-white p-3 rounded me-3">
                            <i class="bi bi-shield-lock fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 text-dark">Segurança</h5>
                            <small class="text-muted">Gerir permissões e staff</small>
                        </div>
                    </div>
                </a>
            </div>
        </AuthorizeView>
    </div>
}

@code {
    private bool ACarregar = true;
    private string NomeUtilizador = "Utilizador";

    // Estatísticas
    private int TotalProdutos;
    private int ProdutosPendentes;
    private int EncomendasPendentes;
    private int TotalUsers;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Obter Nome
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user.Identity?.IsAuthenticated == true)
            {
                NomeUtilizador = user.Identity.Name ?? "Colega";
            }

            // Carregar Estatísticas da BD
            using var context = DbFactory.CreateDbContext();

            TotalProdutos = await context.Produtos.CountAsync();

            // Produtos que precisam de aprovação (Estado 0 = Pendente)
            ProdutosPendentes = await context.Produtos.CountAsync(p => p.Estado == EstadoProduto.Pendente);

            // Encomendas que precisam de ação (Pendente)
            EncomendasPendentes = await context.Encomendas.CountAsync(e => e.Estado == "Pendente");

            TotalUsers = await context.Users.CountAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erro ao carregar dashboard: " + ex.Message);
        }
        finally
        {
            ACarregar = false;
        }
    }
}